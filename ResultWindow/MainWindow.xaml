<Window x:Class="ResultWindow.ResultWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResultWindow"
        mc:Ignorable="d"
        Title="Kết Quả" Height="400" Width="480"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="#F5F5F5">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="🏆 CHÚC MỪNG!" FontSize="24" FontWeight="Bold" Foreground="#337AB7" TextAlignment="Center"/>
            <TextBlock Text="Bạn đã hoàn thành thử thách AI LÀ TRIỆU PHÚ!" FontSize="14" Foreground="#666666" Margin="0,10,0,20" TextAlignment="Center"/>

            <Border Background="White" BorderBrush="#DDD" BorderThickness="1" Padding="15" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock x:Name="txtScore" FontSize="16" FontWeight="Bold" TextAlignment="Center"/>
                    <TextBlock x:Name="txtPercent" FontSize="14" Foreground="#666666" Margin="0,5,0,0" TextAlignment="Center"/>
                    <TextBlock x:Name="txtPrize" FontSize="14" FontWeight="Bold" Foreground="Crimson" Margin="0,5,0,0" TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <TextBlock x:Name="txtAchievement" FontSize="14" FontWeight="Bold" Foreground="#337AB7" Margin="0,0,0,10" TextAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Tuyệt vời!" Width="110" Height="35" Background="#5CB85C" Foreground="White" Margin="5" Click="BtnOK_Click"/>
                <Button Content="Chơi lại" Width="110" Height="35" Background="#337AB7" Foreground="White" Margin="5" Click="BtnRetry_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
